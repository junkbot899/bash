#!/usr/bin/env bash

grr () {

	echo "grr.tbx[Git Repo Rapid]"

	if [ -z "${1}" ]; then
		echo "\${1}: <comment> (git commit): Not provided!"
		exit
	fi


	if [ -z "${2}" ]; then
		echo "\${2}: <branch-name>: Not provided!"
		exit
	fi

	git add .
	git commit -am "${1}"
	git push --set-upstream origin "${2}"
}

grr "${1}" "${2}" 
